<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de Clientes</title>
    <link rel="stylesheet" href="/css/stylesLitC.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <h1>Lista de Clientes</h1>

    <table>
        <thead>
            <tr>
                <th>Cédula</th>
                <th>Nombres</th>
                <th>Apellidos</th>
                <th>Dirección</th>
                <th>Ubicación</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            <% if (clientes.length > 0) { %>
                <% clientes.forEach(cliente => { %>
                    <tr>
                        <td><%= cliente.cedula %></td>
                        <td><%= cliente.nombres %></td>
                        <td><%= cliente.apellidos %></td>
                        <td><%= cliente.direccion %></td>
                        <td>Lat: <%= cliente.ubicacion.x %>, Lng: <%= cliente.ubicacion.y %></td>
                        <td>
                            <a href="/cliente/editar/<%= cliente.id %>" class="action-link"><i class="fas fa-edit"></i> Editar</a>
                            <a href="/clientes/eliminar/<%= cliente.id %>" class="action-link"><i class="fas fa-trash-alt"></i> Eliminar</a>
                        </td>
                    </tr>
                <% }) %>
            <% } else { %>
                <tr>
                    <td colspan="6">No hay clientes registrados.</td>
                </tr>
            <% } %>
        </tbody>
    </table>
</body>
</html>